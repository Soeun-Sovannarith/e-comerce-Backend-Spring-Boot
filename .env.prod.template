# Production Environment Variables
# Copy this to .env.prod and fill in your production values
# DO NOT COMMIT this file with real production secrets

# Database Configuration (Production PostgreSQL)
DB_URL=jdbc:postgresql://your-prod-db-host:5432/ecommerce_db
DB_USERNAME=your_prod_db_user
DB_PASSWORD=your_secure_prod_password
DB_NAME=ecommerce_db

# JWT Configuration (Use a strong secret in production)
JWT_SECRET=your_production_jwt_secret_here_should_be_very_long_and_random
JWT_EXPIRATION=86400000

# Server Configuration
PORT=8080

# Optional: External service configurations
# SMTP_HOST=your-smtp-host
# SMTP_PORT=587
# SMTP_USERNAME=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
